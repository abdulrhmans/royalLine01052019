<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="res_config_settings_view_form" model="ir.ui.view">
			<field name="name">res.config.settings</field>
			<field name="model">res.config.settings</field>
			<field name="inherit_id"
				ref="hr_payroll.res_config_settings_view_form" />
			<field name="arch" type="xml">
				<xpath expr="//div[@id='hr_payroll_accountant']"
					position="after">
					<h2>Salary Increase</h2>
                    <div class="row mt16 o_settings_container" id="hr_payroll_salary_increase">
                        <div class="col-md-6 col-xs-12 o_setting_box">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <label  for="users_to_notify_ids" />
                                <field name="users_to_notify_ids" widget="many2many_tags" options="{'no_create': True,'no_quick_create': True,'no_open': True, 'no_create_edit': True}"/>
                                <div class="text-muted">
                                </div>
                            </div>
                        </div>
                    </div>
					
					
					
					
					
					</xpath>
			</field>
		</record>


	</data>
</odoo>